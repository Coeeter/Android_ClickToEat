<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ClickToEat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--for button-->
        <item name="colorPrimary">@color/lighterDark</item>

        <item name="colorPrimaryVariant">@color/lighterDark</item>

        <!--for button text-->
        <item name="colorOnPrimary">@color/orange</item>

        <!--color for checkboxes etc-->
        <item name="colorAccent">@color/orange</item>

        <!--for background of screen-->
        <item name="colorOnBackground">@color/dark</item>

        <!--for edit text bg-->
        <item name="colorOnPrimaryContainer">@color/transparent</item>

        <!--disabled edit text bg-->
        <item name="colorOnError">@color/transparent</item>

        <!--text color-->
        <item name="textFillColor">@color/white</item>

        <!--for the card bg-->
        <item name="colorContainer">@color/dark</item>

        <!--bottom and top colors-->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/black</item>
    </style>
</resources>